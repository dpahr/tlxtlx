        "first-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q1-name",
                    "prompt": "What is your first name?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "longText",
                    "placeholder": "Please enter your first name"
                },
                {
                    "id": "q2-name",
                    "prompt": "What is your last name?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "longText",
                    "placeholder": "Please enter your first name"
                },
                {
                    "id": "q2-color",
                    "prompt": "What is your favorite color?",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "dropdown",
                    "placeholder": "Please choose your favorite color",
                    "options": ["Red", "Blue", "My favorite color is not shown here."]
                }
            ]
        },
        "second-question-set": {
            "type": "questionnaire",
            "response": [
                {
                    "id": "q3-satisfaction",
                    "prompt": "Rate your satisfaction with this survey from 1 (not enjoyable) to 5 (very enjoyable).",
                    "required": true,
                    "location": "aboveStimulus",
                    "type": "likert",
                    "leftLabel": "Not Enjoyable",
                    "rightLabel": "Very Enjoyable",
                    "numItems": 5
                }
            ]
        }
    },
    "importedLibraries": [
        "nasa-tlx",
        "mini-vlat"
    ],
    "sequence": {
        "order": "fixed",
        "components": [            
            "introduction",            
            {
                "components": [                    
                    "$mini-vlat.co.scatterplot",  
                    "$mini-vlat.co.stackedBar100", 
                    "$mini-vlat.co.areachar", 
                    "$mini-vlat.co.treemap", 
                    "$mini-vlat.co.barchart", 
                    "$mini-vlat.co.histogram", 
                    "$mini-vlat.co.stackedarea", 
                    "$mini-vlat.co.choropleth", 
                    "$mini-vlat.co.linechart", 
                    "$mini-vlat.co.piechart", 
                    "$mini-vlat.co.bubblechart", 
                    "$mini-vlat.co.stackedbar"
                ],
                "order": "latinSquare",
                "numSamples": 1
            },
            "intro-TLX-task",
            {
                "components": [                         
                            "$nasa-tlx.co.nasa-tlx",
                            {
                                "components": [{
                                    "components": [
                                        "effort-performance",
                                        "temporal-frustration",
                                        "temporal-effort",
                                        "physical-frustration",
                                        "performance-frustration",
                                        "physical-temporal",
                                        "physical-performance",
                                        "temporal-mental",
                                        "frustration-effort",
                                        "performance-mental",
                                        "performance-temporal",
                                        "mental-effort",
                                        "mental-physical",
                                        "effort-physical",
                                        "frustration-mental"

                                    ],
                                    "order":"random"
                                },
                                "$nasa-tlx.co.nasa-tlx"
                                ],
                                "order": "fixed"
                            }
                        ],                
                        "order": "latinSquare",
                        "numSamples": 1
                },    
                "intro-TLX-TLX",  
                {
                    "components": [{
                        "components": [
                            "effort-performance",
                            "temporal-frustration",
                            "temporal-effort",
                            "physical-frustration",
                            "performance-frustration",
                            "physical-temporal",
                            "physical-performance",
                            "temporal-mental",
                            "frustration-effort",
                            "performance-mental",
                            "performance-temporal",
                            "mental-effort",
                            "mental-physical",
                            "effort-physical",
                            "frustration-mental"

                        ],
                        "order":"random"
                    },
                    "$nasa-tlx.co.nasa-tlx"
                    ],
                    "order": "fixed"
                }
        ]
        
    }
